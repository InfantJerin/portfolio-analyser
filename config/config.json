    "simulation_params": {
        "monte_carlo_iterations": 10000,
        "bootstrap_blocks": 1000,
        "random_seed": 42
    },
    "scenario_thresholds": {
        "bullish": 0.2,
        "bearish": -0.2,
        "sentiment_shift": {
            "bullish": 0.3,
            "neutral": 0.0,
            "bearish": -0.3
        }
    },
    "feature_engineering": {
        "sentiment_lags": [1, 2, 3, 5],
        "price_features": ["returns_1d", "returns_5d", "volatility_10d", "rsi_14d"],
        "technical_indicators": true
    }
